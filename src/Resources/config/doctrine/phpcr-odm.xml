<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="cmf_content_type.storage.phpcr.property_encoder" class="Symfony\Cmf\Component\ContentType\Storage\Doctrine\PhpcrOdm\PropertyEncoder">
            <argument>%cmf_content_type.phpcr_namespace_prefix%</argument>
            <argument>%cmf_content_type.phpcr_namespace_url%</argument>
        </service>

        <service id="cmf_content_type.storage.doctrine.phpcr_odm.field_mapper" class="Symfony\Cmf\Component\ContentType\Storage\Doctrine\PhpcrOdm\FieldMapper">
            <argument type="service" id="cmf_content_type.storage.phpcr.property_encoder" />
        </service>

        <service id="cmf_content_type.doctrine.phpcr_odm.field_driver" class="Symfony\Cmf\Component\ContentType\Storage\Doctrine\PhpcrOdm\ContentTypeDriver">
            <argument type="service" id="cmf_content_type.registry.field" />
            <argument type="service" id="cmf_content_type.registry.mapping" />
            <argument type="service" id="cmf_content_type.mapping_resolver" />
            <argument type="service" id="cmf_content_type.storage.doctrine.phpcr_odm.field_mapper" />
        </service>

        <service id="cmf_content_type.doctrine.phpcr_odm.subscriber.metadata" class="Symfony\Cmf\Component\ContentType\Storage\Doctrine\PhpcrOdm\Subscriber\MetadataSubscriber">
            <argument type="service" id="cmf_content_type.metadata.factory" />
            <argument type="service" id="cmf_content_type.registry.field" />
            <argument type="service" id="cmf_content_type.mapping_resolver" />
            <argument type="service" id="cmf_content_type.storage.doctrine.phpcr_odm.field_mapper" />

            <tag name="doctrine_phpcr.event_subscriber" />
        </service>

        <service id="cmf_content_type.doctrine.phpcr_odm.subscriber.collection" class="Symfony\Cmf\Component\ContentType\Storage\Doctrine\PhpcrOdm\Subscriber\CollectionSubscriber">
            <argument type="service" id="cmf_content_type.metadata.factory" />
            <argument type="service" id="cmf_content_type.registry.field" />
            <argument type="service" id="cmf_content_type.storage.phpcr.property_encoder" />
        </service>



    </services>

</container>


