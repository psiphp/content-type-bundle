<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="psi_content_type.registry.view" class="Psi\Component\ContentType\View\ViewRegistry" />
        <service id="psi_content_type.registry.field" class="Psi\Component\ContentType\FieldRegistry" />
        <service id="psi_content_type.registry.storage_type" class="Psi\Component\ContentType\Storage\TypeRegistry" />

        <service id="psi_content_type.view_builder" class="Psi\Component\ContentType\View\ViewBuilder">
            <argument type="service" id="psi_content_type.metadata.factory"/>
            <argument type="service" id="psi_content_type.field_loader" />
            <argument type="service" id="psi_content_type.registry.view" />
        </service>

        <service id="psi_content_type.field_loader" class="Psi\Component\ContentType\FieldLoader">
            <argument type="service" id="psi_content_type.storage.type_factory" />
            <argument type="service" id="psi_content_type.registry.field" />
        </service>

        <service id="psi_content_type.storage.type_factory" class="Psi\Component\ContentType\Storage\TypeFactory">
            <argument type="service" id="psi_content_type.registry.storage_type" />
        </service>

    </services>

</container>
