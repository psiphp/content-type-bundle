<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="psi_content_type.registry.view" class="Symfony\Cmf\Component\ContentType\ViewRegistry" />
        <service id="psi_content_type.registry.field" class="Symfony\Cmf\Component\ContentType\FieldRegistry" />

        <service id="psi_content_type.registry.mapping" class="Symfony\Cmf\Component\ContentType\MappingRegistry" />

        <service id="psi_content_type.view_builder" class="Symfony\Cmf\Component\ContentType\ContentViewBuilder">
            <argument type="service" id="psi_content_type.metadata.factory"/>
            <argument type="service" id="psi_content_type.registry.field" />
            <argument type="service" id="psi_content_type.registry.view" />
        </service>

        <service id="psi_content_type.mapping_resolver" class="Symfony\Cmf\Component\ContentType\MappingResolver">
            <argument type="service" id="psi_content_type.registry.mapping" />
        </service>

    </services>

</container>
